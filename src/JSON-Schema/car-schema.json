{
    "$id": "https://jmcanterafonseca.github.io/cognigy/spec/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "VehIdNumber": {
            "type": "string",
            "minLength": 1
        },
        "CarMetadata": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "type": {
                    "type": "string",
                    "enum": ["Car"]
                },
                "dateCreated": {
                    "type": "string",
                    "format": "date-time"
                },
                "dateModified": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": ["id", "type", "dateCreated", "dateModified"]
        },
        "CarData": {
            "type": "object",
            "properties": {
                "color": {
                    "type": "string",
                    "minLength": 1
                },
                "brand": {
                    "type": "string",
                    "minLength": 1
                },
                "model": {
                    "type": "string",
                    "minLength": 1
                },
                "vehicleIdentificationNumber": {
                    "$ref": "#/definitions/VehIdNumber"
                },
                "dateVehicleFirstRegistered": {
                    "type": "string",
                    "format": "date-time"
                },
                "emissionsCO2": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        }
    },
    "allOf": [
        {
            "if": {
                "type": "object",
                "properties": {
                    "vehicleIdentificationNumber": {
                        "$ref": "#/definitions/VehIdNumber"
                    }
                },
                "required": ["vehicleIdentificationNumber"]
            },
            "then": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["brand", "model", "vehicleIdentificationNumber"]
                    },
                    {
                        "$ref": "#/definitions/CarData"
                    }
                ]
            }
        },
        {
            "if": {
                "type": "object"
            },
            "then": {
                "$ref": "#/definitions/CarData"
            }
        }
    ]
}
