{
  "$id": "https://jmcanterafonseca.github.io/cognigy/spec/schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "CarMetadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string",
          "enum": ["Car"]
        },
        "dateCreated": {
          "type": "string",
          "format": "date-time"
        },
        "dateModified": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "type", "dateCreated"]
    },
    "CarData": {
      "type": "object",
      "properties": {
        "color": {
          "type": "string",
          "minLength": 1
        },
        "brand": {
          "type": "string",
          "minLength": 1
        },
        "model": {
          "type": "string",
          "minLength": 1
        },
        "vehicleIdentificationNumber": {
            "type": "string",
            "minLength": 1
        },
        "dateVehicleFirstRegistered": {
          "type": "string",
          "format": "date-time"
        },
        "emissionsCO2": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["brand", "model", "vehicleIdentificationNumber"],
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/CarData"
    }
  ]
}
