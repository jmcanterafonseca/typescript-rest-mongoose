{
  "openapi": "3.0.3",
  "info": {
    "version": "1.0.0",
    "title": "Car API",
    "license": {
      "name": "Apache2"
    }
  },
  "components": {
    "schemas": {
      "CarMetadata": {
        "$ref": "../src/JSON-Schema/car-schema.json#/definitions/CarMetadata"
      },
      "CarData": {
        "$ref": "../src/JSON-Schema/car-schema.json#/definitions/CarData"
      }
    }
  },
  "paths": {
    "/cars": {
      "post": {
        "summary": "Creates a new Car resource",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/CarData"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Retrieves all cars resources",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schema/CarMetadata"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/car/{carId}": {
      "parameters": [
        {
          "name": "carId",
          "in": "path",
          "schema": {
            "type": "string",
            "format": "uri"
          },
          "required": true,
          "style": "simple"
        }
      ],
      "responses": {
        "404": {
          "summary": "Car resource not found"
        }
      },
      "get": {
        "summary": "Retrieves an individual car resource",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schema/CarMetadata"
                    },
                    {
                      "$ref": "#/components/schema/CarData"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Updates an individual car resource",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schema/CarData"
              }
            }
          }
        },
        "responses": {
          "204": {
            "summary": "Operation executed"
          }
        }
      },
      "delete": {
        "204": {
          "summary": "Operation executed"
        }
      }
    }
  }
}